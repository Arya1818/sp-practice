<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sp.practice.dao.UserInfoMapper">
	<select id="selectUserInfoList" resultType="user">
		select * from user_info
		<where>
			<if test="search!=null">
				<foreach collection="search" item="col" separator="or">
					${col} like '%'|| #{searchStr} ||'%'   <!-- ??? -->
				</foreach>
			</if>
		</where>
	</select>
	<select id="selectUser" resultType="user">
		select * from user_info
		<where>
			<if test="uiNum!=null">
				ui_num = #{uiNum}
			</if>
		</where>
	</select>
	<insert id = "insertUserInfo" parameterType="user"> <!-- 파라미터타입 안써도 user집어넣으면 동작하긴함 -->
		insert into user_info(ui_num, ui_id, ui_pwd, ui_name, credat, cretim, moddat, modtim)
		values(seq_ui_num.nextval, #{uiId}, #{uiPwd}, #{uiName},
		to_char(sysdate,'YYYYMMDD'),to_char(sysdate,'HH24MISS'),
		to_char(sysdate,'YYYYMMDD'),to_char(sysdate,'HH24MISS')
		)
	</insert>
	<update id="updateUserInfo" parameterType="user">
		update user_info
		<set>
			<if test="uiId!=null">
				, ui_id = #{uiId} 
			</if>
			<if test="uiPwd!=null">
				, ui_Pwd = #{uiPwd} 
			</if>
			<if test="uiName!=null">
				, ui_name = #{uiName} 
			</if>	
		</set>	
		where ui_num = #{uiNum}
	</update>
	
   <delete id="deleteUserInfos" parameterType="user">
   delete user_info
   <where>
	 	  <if test="uiNums !=null">
	 	  	<foreach collection="uiNums" item="nums" separator="or">
	 	  			ui_num = #{nums} 
	 	  	</foreach>
	 	  </if>	
 	  	</where>
   </delete>
   <select id="selectUserInfo" resultType="user"> <!-- 로그인 -->
		select * from user_info
		<where>
			<if test="uiId!=null">
				and ui_id = #{uiId}
			</if>
			<if test="uiPwd!=null">
				and ui_pwd = #{uiPwd}
			</if>
			<if test="uiNum!=null">
				and ui_num = #{uiNum}
			</if>
		</where>
	</select>
</mapper>